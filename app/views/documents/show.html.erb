<h2>Title: <%= @document.current_version.title%></h2>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr class="head-table">
        <th>Code</th>
        <th>Origin</th>
        <th>Type</th>
        <th>Number</th>
        <th>Ubication</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @document.code %></td>
        <td><%= @document.origin %></td>
        <td><%= @document.type %></td>
        <td>#<%= @document.current_version.number %></td>
        <td><%= @document.current_version.ubication %></td>
      </tr>
    </tbody>
  </table>
</div>
  

<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>



<h2>Versions</h2>
<div class="text-white">
  <%= link_to 'New Version', new_document_version_path(@document, @version), class: "btn btn-danger" %>
</div>

<div class="table table-responsive">
  <table class="table table-hover">
    <thead>
      <tr class="head-table">
        <th>Number</th>
        <th>Title</th>
        <th>Created at</th>
        <th>Ubication</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @document.versions.each do |version| %>
        <tr>
          <td>#<%= version.number %></td>
          <td><%= version.title %></td>
          <td><%= version.created_at %></td>
          <td><%= version.ubication %></td>
          <td><a href="<%= version.docs_url %>" target="_blank">Show Document</a></td>
          <td><%= link_to 'Edit', edit_document_version_path(@document, version) %></td>
          <td><%= link_to 'Destroy', [@document, version], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>





  
