<% provide(:title, "Show Document") %>
<!-- Subnavbar -->
<div class="navbar subnavbar">
    <div class="collapse navbar-collapse">
      <!-- Single button -->
      <div class="btn-group mr-btn-new">
        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
           New <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to 'Version', new_document_version_path(@document, @version), remote: true %>
          </li>
        </ul>
      </div>
    </div>
</div>

<h2>Title: <%= @document.current_version.title%></h2>
<div class="table-responsive">
  <table class="table bg-white">
    <thead>
      <tr class="head-table">
        <th>Code</th>
        <th>Origin</th>
        <th>Type</th>
        <th>Number</th>
        <th>Description</th>
        <th>Ubication</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @document.code %></td>
        <td><%= @document.origin %></td>
        <td><%= @document.type %></td>
        <td>#<%= @document.current_version.number %></td>
        <td><%= @document.current_version.description %></td>
        <td><%= @document.current_version.ubication %></td>
        <td class="text-white"><%= link_to 'Back', documents_path, class: "btn btn-success btn-sm" %></td>
      </tr>
    </tbody>
  </table>
</div>


<h2>Versions</h2>

<div class="table table-responsive">
  <table id="versions" class="table table-hover">
    <thead>
      <tr class="head-table">
        <th>Number</th>
        <th>Title</th>
        <th>Created at</th>
        <th>Description</th>
        <th>Ubication</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @document.versions.each do |version| %>
        <tr>
          <td>#<%= version.number %></td>
          <td><%= version.title %></td>
          <td><%= version.created_at %></td>
          <td><%= version.description %></td>
          <td><%= version.ubication %></td>
          <td class="text-white"><a href="<%= @document.doc_url %>" class="btn btn-info btn-sm" target="_blank">Show Document</a></td>
          <td><%= link_to 'Edit', edit_document_version_path(@document, version), class: "btn btn-default btn-sm" %></td>
          <td class="text-white"><%= link_to 'Destroy', [@document, version], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

