<h1>Listing Documents</h1>
<div class="text-white">
  <%= link_to 'New Document', new_document_path, class: "btn btn-danger" %>
</div>

<div class="table table-responsive">
  <table class="table table-hover">
    <thead>
      <tr class="head-table">
        <th>Code</th>
        <th>Title</th>
        <th>Origin</th>
        <th>Type</th>
        <th>Number</th>
        <th>Ubication</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.code %></td>
          <td><%= document.current_version.title %></td>
          <td><%= document.origin %></td>
          <td><%= document.type %></td>
          <td>#<%= document.current_version.number %></td>
          <td><%= document.current_version.ubication %></td>
          <td><a href="<%= document.current_version.docs_url %>" target="_blank">Show Document</a></td>
          <td><%= link_to 'Show', document %></td>
          <td><%= link_to 'Edit', edit_document_path(document) %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
